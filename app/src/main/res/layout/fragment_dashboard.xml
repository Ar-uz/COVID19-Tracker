<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".main.DashboardFragment">

    <ImageView
        android:id="@+id/iv_face_protection"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="16dp"
        android:src="@drawable/ic_face_protection"
        android:layout_width="200dp"
        android:layout_height="200dp"/>

    <TextView
        android:id="@+id/tv_dashboard"
        android:text="Hello!"
        android:fontFamily="@font/work_sans_medium"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_face_protection"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_tracking"
        app:layout_constraintTop_toBottomOf="@+id/tv_dashboard"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="Area-wise tracking"
            android:background="@drawable/bg_dashboard_button_c"
            android:fontFamily="@font/work_sans_medium"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:padding="16dp"
            android:textColor="@color/white"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:drawableStartCompat="@drawable/ic_area_track" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_survey"
        app:layout_constraintTop_toBottomOf="@id/cv_tracking"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="Take a quick survey"
            android:background="@drawable/bg_dashboard_button_a"
            android:fontFamily="@font/work_sans_medium"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"
            android:padding="16dp"
            android:textColor="@color/white"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:drawableStartCompat="@drawable/ic__17_clipboard" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_info"
        app:layout_constraintTop_toBottomOf="@id/cv_survey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="About this app"
            android:background="@drawable/bg_dashboard_button_d"
            android:fontFamily="@font/work_sans_medium"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"
            android:padding="16dp"
            android:textColor="@color/white"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:drawableStartCompat="@drawable/ic__10_doctor" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>